<h2>New Appointment</h2>
<%= form_with model: @appointment, url:appointments_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :doctor_id %>
    <%= f.collection_select :doctor_id, Doctor.all, :id, :name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :patient_id %>
    <%= f.collection_select :patient_id, Patient.all, :id, :name, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :appointment_date %>
    <%= f.text_field :appointment_date, class:"flatpickr", data: { enableTime: true, dateFormat: "Y-m-d H:i", midDate: "today" } %>
  </div>
    <div class="actions">
      <%= link_to 'Back', appointments_path, class:"btn btn-success" %>
      <%= f.submit 'Create Appointment', class:"btn btn-primary" %>
    </div>
<% end %>
<script>
  flatpickr(".flatpickr")
</script>
