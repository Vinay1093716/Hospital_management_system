<div class="text-center">
<h1>New Appointment</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @appointment, class:"form" do |f| %>
      <div class="form-group">
        <%= f.label :patient_id %>
        <%= f.collection_select :patient_id, Patient.all, :id, :name, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :appointment_date %>
        <%= f.datetime_field :appointment_date, as: :datetime, minute_step: 60 %>
      </div>
      <div class="actions">
        
        <%= f.submit 'Create Appointment', class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
