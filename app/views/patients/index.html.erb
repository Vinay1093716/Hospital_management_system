<div class="text-center">
  <h2>Patients</h2>
</div>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Age</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @doctor.patients.each do |patient| %>
      <tr>
        <td><%= patient.id %></td>
        <td><%= patient.name %></td>
        <td><%= patient.age %></td>
        <td>
          <%= link_to "View", doctor_patient_path(patient), class: "btn btn-success" %>
          <%= link_to "Edit", edit_doctor_patient_path(patient), class: "btn btn-primary" %>
          <%= link_to "Delete", patient_path(patient), method: :delete, data: {confirm: "Are you sure?" }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add New patient', new_doctor_patient_path, class: "btn btn-success" %>
