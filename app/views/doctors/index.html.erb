<div class="text-center">
  <h1>Doctors</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Speciality</th>
      <th>Hospital</th>
    </tr>
  </thead>
  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.speciality %></td>
        <td><%= doctor.hospital.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Doctor', new_doctor_path, class:"btn btn-success" %>
