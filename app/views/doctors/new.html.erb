<h2>New Doctor</h2>
<%= form_for @doctor,class:"form" do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :speciality %>
    <%= f.text_field :speciality,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :hospital_id %>
    <%= f.collection_select :hospital_id, Hospital.all, :id, :name,class:"form-control" %>
  </div>
    <%= link_to 'Back', doctors_path, class:"btn btn-success" %>
    <%= f.submit 'Create Doctor', class: "btn btn-primary" %>
<% end %>
